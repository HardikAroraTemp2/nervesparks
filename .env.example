# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/rag-system

# OpenAI Configuration (for embeddings and LLM)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace Configuration (alternative to OpenAI)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google Vision API (for advanced OCR)
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here

# Azure Cognitive Services (alternative OCR)
AZURE_COGNITIVE_SERVICES_KEY=your_azure_key_here
AZURE_COGNITIVE_SERVICES_ENDPOINT=your_azure_endpoint_here

# Tesseract OCR (local OCR option)
TESSERACT_PATH=/usr/bin/tesseract

# Vector Database Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# Server Configuration
PORT=3001
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads